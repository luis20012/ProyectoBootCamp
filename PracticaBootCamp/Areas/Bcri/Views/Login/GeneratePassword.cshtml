
@{var Res = PracticaBootCamp.Res.res;}
@model PracticaBootCamp.Areas.Bcri.Models.GeneratePass
@{
	Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
	<div id="error"> @(ViewBag.ErrorMessage)</div>
	return;
}
<h1>User recovery</h1>
<div id="box">
	@if (Model != null)
	{
		<p>@Res.hello @(Model.FullName), @Res.writeNewPass</p>
	}

	<div class="form">
		@using (Html.BeginForm())
		{
			<fieldset>
				@Html.HiddenFor(x => x.id)

				<div class="form-group">
					@Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Password", @type = "password" })
				</div>

				<div class="form-group">
					@Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "Repeat Password", @type = "password" })

				</div>

				@if (ViewData["error"] != null)
				{
					<div class="alert alert-danger">
						@ViewData["error"]
					</div>
				}
				<input class="btn btn-primary btn-lg btn-block" type="submit" value=@Res.confirm onclick="" />
			</fieldset>
		}
	</div>
</div>
@section scripts
{
	@Scripts.Render("~/bundles/pwstrength")
}

