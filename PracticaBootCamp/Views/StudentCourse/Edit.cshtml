@model PracticaBootCamp.Bussines.StudentCourse

@{
    Layout = "~/Views/Shared/_LayoutBcri.cshtml";
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    List<SelectListItem> courseList = (List<SelectListItem>)ViewBag.courseList;
    List<SelectListItem> studentList = (List<SelectListItem>)ViewBag.studentList;
    List<SelectListItem> userList = (List<SelectListItem>)ViewBag.userList;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

@using (Html.BeginForm("Edit", "StudentCourse", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.Id)
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <h1><b>Editar Nota</b></h1>
    <hr />

    <div class="form-group">
        <label class="control-label col-sm-2">Promedio</label>
        <div class="col-sm-2">
            @Html.EditorFor(model => model.Average, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Average, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Estudiante</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" value="@Model.Student.User.FullName" disabled />
            @Html.HiddenFor(model => model.Student.Id)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Curso</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" value="@Model.Course.Name" disabled />
            @Html.HiddenFor(model => model.Course.Id)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-default" />
        </div>
    </div>
}

</body>
</html>
